<Window x:Class="AudioToggler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioToggler"
        mc:Ignorable="d" ResizeMode="NoResize" AllowsTransparency="True"
        Title="MainWindow" WindowStyle="None" Background="Transparent"
        MaxWidth="300" MaxHeight="100" Closing="Window_Closing">
        <Grid>
            <Border Name="BackgroundBorder" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" Background="Black" CornerRadius="8">
                <Label Name="DeviceLabel" Content="" Foreground="White" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
            </Border>
        </Grid>
</Window>
